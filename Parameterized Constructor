class Phone {
    String brand;
    int price;
    
    // Constructor with parameters
    Phone(String b, int p) {
        brand = b;
        price = p;
    }

    void display() {
        System.out.println("Brand: " + brand + ", Price: " + price);
    }

    public static void main(String[] args) {
        Phone myPhone = new Phone("Samsung", 50000);  // Passing values
        myPhone.display();
    }
}
